
@{
    ViewData["Title"] = "Index";
}

<h1>Create Account</h1>

<form method="post" action="/User/UserConfirmation">
    <div class="form-group" id="FirstNameFormGroup">
        <label for="FirstName">First Name</label>
        <input type="text" class="form-control bg-dark border-dark" id="FirstName" placeholder="First Name" name="FirstName">
        <span class="text-danger text-hide"></span>
    </div>
    <div class="form-group" id="LastNameFormGroup">
        <label for="LastName">Last Name</label>
        <input type="text" class="form-control bg-dark border-dark" id="LastName" placeholder="Last Name" name="LastName">
        <span class="text-danger text-hide"></span>
    </div>
    <div class="form-group" id="EmailFormGroup">
        <label for="Email">Email address</label>
        <input type="text" class="form-control bg-dark border-dark" id="Email" placeholder="Email" name="Email">
        <span class="text-danger text-hide"></span>
    </div>
    <div class="form-group" id="PasswordFormGroup">
        <label for="Password">Password</label>
        <input type="password" class="form-control bg-dark border-dark" id="Password" placeholder="Password" name="Password">
        <span class="text-danger text-hide"></span>
    </div>
    <div class="form-group" id="ConfirmPasswordFormGroup">
        <label for="ConfirmPassword">Confirm Password</label>
        <input type="password" class="form-control bg-dark border-dark" id="ConfirmPassword" placeholder="Confirm Password" name="ConfirmPassword">
        <span class="text-danger text-hide"></span>
    </div>
    <button type="button" class="btn btn-primary">Submit</button>
</form>

<script src="~/js/userForm.js"></script>